<div class='container'>

  <%# SEARCH-BAR %>
  <div class='search'>
    <%= simple_form_for root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <%= text_field_tag :query, params[:query], value: params[:query],class: "form-control string required", placeholder: "Trouver des topos" %>
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i>
        </button>
      </div>
    <% end %>
    <% if @topos.count == 0 %>
      <h4 id='search-message'>Désolé nous ne trouvons aucun topo pour toi 🤦🏻‍♂️</h4>
    <% else %>
      <h4>(<%= @topos.count %>) <%= @topos.count <= 1 ? 'Topo' : 'Topos' %></h4>
    <% end %>
  </div>

  <%# LIST TOPOS %>
    <%= render "shared/topos-cards", topos: @topos %>
</div>
