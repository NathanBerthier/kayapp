<div class="container topo">
  <% if @topo.has_alert? %>
    <div class="alert-banner">
      <div id='alert-title'>
        <div>
          <i class="fas fa-exclamation-triangle"></i>
          <span><%= "#{"Alerte".pluralize(@alerts_count)} (#{@alerts_count})"%></span>
        </div>
        <i class="fas fa-chevron-down"></i>
      </div>
      <div class="alert-content">
        <% @comments.each do |comment| %>
          <% if comment.active %>
            <div class='alert-message'>
              <div class="alert-type">
                <h4>Type</h4>
                <span><%= comment.alert_type %></span>
              </div>
              <div class="alert-type">
                <h4>Praticable</h4>
                <span><%= comment.severity == 'Praticable' ? 'Oui' : 'Non' %></span>
              </div>
              <p><%= comment.description %></p>
              <h5>Post√© le <%= comment.updated_at.strftime("%d") %>/<%= comment.updated_at.strftime("%m") %>/<%= comment.updated_at.year %> √† <%= comment.updated_at.hour %>h<%= comment.updated_at.min %></h5>
              <div class='alert-status'>
                <h5>Danger toujours pr√©sent?</h5>
                <div>
                  <%= link_to 'oui', root_path, class: 'btn-red' %>
                  <%= link_to 'non', topo_comment_path(@topo, comment), method: :patch ,class: 'btn-yellow' %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
  <%= link_to 'Add a comment', new_topo_comment_path(@topo)%>

  <div id="key-info">
    <div class='key-text'>
      <h4>Difficult√©</h4>
      <span><%= @topo.find_level.count > 1 ? "#{@topo.find_level[0]} - #{@topo.find_level[1]}" : "#{@topo.find_level[0]}" %></span>
      <h4>Longueur</h4>
      <span><%= "#{@topo.length}" %></span>
      <h4>D√©part</h4>
      <span><%= @departure.name.capitalize %></span>
      <h4>Arriv√©e</h4>
      <span><%= @arrival.name.capitalize %></span>
    </div>
  </div>

  <div id="water-info">
        <%# <%= line_chart @data, %>
      <%= line_chart river_data_topo_path(@topo),
          id:"water-graph",
          width: "100%", height: "100%",
          ytitle: "Vol. d'eau (m3)", xtitle: "Date",
          style: "display:"
          legend: true,
          points: false,
          loading: "Chargement en cours... üö£‚Äç‚ôÄÔ∏è üé£ ",
          empty: "Aucune donn√©e disponible üò±"
          %>
    <div id="water-temp">
      <h3>2¬∞</h3>
    </div>
  </div>

</div>
