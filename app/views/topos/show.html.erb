<script src="../../javascript/plugins/graph"></script>

<div class="navbar fixed-top navbar-expand-sm navbar-light navbar-lewagon" id="topo-header">
  <div class="topo-name"> <%# FYI Class not used %>
    <%= "#{@topo.river.name.capitalize} - #{@topo.name.capitalize}"  %>
  </div>
  <div class="favorite-icon active"> <%# FYI Class not used %>
    <%= image_tag "navbar/favorites.svg" %> <%# TODO : ajouter JS => si click, alors toggle.active + impact DB "%>
  </div>
</div>

<div class="container topo">
  <div id="alert-banner">
    <%= "⚠️  #{"Alerte".pluralize(@alerts_count)} (#{@alerts_count})"%> <%# TODO: warning à rendre dynamique %>
  </div>

  <div id="water-info">
      <%= line_chart @data,
          id:"water-graph",
          width: "100%", height: "100%",
          ytitle: "Vol. d'eau (m3)", xtitle: "Heure",
          legend: true, label: "station 1",
          loading: "Chargement en cours... 🚣‍♀️ 🎣 🦦",
          empty: "Aucune donnée disponible 😭"
          %>
    <div id="water-temp">
      <h3>20°</h3>
    </div>
  </div>

  <div id="key-info">
    <div class="row-3" id="category-row">
      <div class="col-sm">
        Difficulté
      </div>
      <div class="col-sm">
        Longueur
      </div>
      <div class="col-sm">
        Départ
      </div>
      <div class="col-sm">
        Arrivée
      </div>
    </div>
    <div class="row-6" id="content-row">
      <div class="col-sm">
        <%= "topo.level"%> <%# TODO: insert string LEVEL scrappé %>
      </div>
      <div class="col-sm">
        <%= "#{@topo.length}" %>
      </div>
      <div class="col-sm">
        <%= @departure.name %>
      </div>
      <div class="col-sm">
        <%= @arrival.name %>
      </div>
    </div>
  </div>
</div>
